<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.softwaremagico.tm.advisor.ui.character.TabCharacterCreationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/character_creation_fragment" />

    <fragment
        android:id="@+id/navigation_sheet"
        android:name="com.softwaremagico.tm.advisor.ui.visualization.TabSheetVisualizationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/character_visualization_fragment" />
</navigation>
