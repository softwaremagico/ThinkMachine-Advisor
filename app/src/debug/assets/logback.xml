<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/sdcard/thinkmachine/advisor.log</file> <!-- /sdcard/testFile.log -->
        <append>true</append>
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>%-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.softwaremagico.tm.log.MachineLog" additivity="false" level="DEBUG">
        <appender-ref ref="LOGCAT"/>
    </logger>
    <logger name="com.softwaremagico.tm.log.MachineXmlReaderLog" additivity="false" level="INFO">
        <appender-ref ref="LOGCAT"/>
    </logger>
    <logger name="com.softwaremagico.tm.log.RandomGenerationLog" additivity="false" level="DEBUG">
        <appender-ref ref="LOGCAT"/>
    </logger>
    <logger name="com.softwaremagico.tm.log.CostCalculatorLog" additivity="false" level="DEBUG">
        <appender-ref ref="LOGCAT"/>
    </logger>
    <logger name="com.softwaremagico.tm.advisor.log.AdvisorLog" additivity="false" level="DEBUG">
        <appender-ref ref="LOGCAT"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="com.softwaremagico.tm.log.ConfigurationLog" additivity="false" level="DEBUG">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="LOGCAT" />
    </root>
</configuration>